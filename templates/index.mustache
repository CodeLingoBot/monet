
{{{Post}}}

<div class="bottom-panel summary">
    <div class="left-panel">
        <h3>Recent Posts</h3>
        <ul>
        {{#Posts}}
        <li>
            <a href="/blog/{{Slug}}/">{{Title}}</a>
            <span class="date">{{NaturalTime}}</span>
        </li>
        {{/Posts}}
        <li><a href="/blog/">...</a></li>
        </ul>
    </div>
    <div class="right-panel">
        <h3>Recent Activity</h3>
        <ul>
        {{#Entries}}
        <li>
            {{{SummaryRender}}}
        </li>
        {{/Entries}}
        {{! <li><a href="/stream/">...</a></li> }}
        </ul>
    </div>
    <div class="clear"></div>
</div>


